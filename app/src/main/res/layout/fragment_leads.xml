<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_blue"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="16dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GroMo"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leads"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- No leads yet section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No leads yet!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_marginTop="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create your first lead and earn upto â‚¹5,000"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <!-- Do you know card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border_blue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_background">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_bulb"
                            android:tint="@color/white" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.05"
                            android:text="Do you know?"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You can add friends from your contacts and sell recommended products!"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:lineSpacingExtra="2dp"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- Create a lead in 3 simple steps -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border_green">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create a lead in 3 simple steps"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="24dp"
                        android:gravity="center">

                        <!-- Step 1 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/circle_green"
                                android:text="1"
                                android:textColor="@color/white"
                                android:gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add\nCustomer"
                                android:textAlignment="center"
                                android:layout_marginTop="8dp"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <View
                            android:layout_width="40dp"
                            android:layout_height="2dp"
                            android:background="@color/light_green"/>

                        <!-- Step 2 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/circle_green"
                                android:text="2"
                                android:textColor="@color/white"
                                android:gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select\nProduct"
                                android:textAlignment="center"
                                android:layout_marginTop="8dp"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <View
                            android:layout_width="40dp"
                            android:layout_height="2dp"
                            android:background="@color/light_green"/>

                        <!-- Step 3 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/circle_green"
                                android:text="3"
                                android:textColor="@color/white"
                                android:gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sell\nProduct"
                                android:textAlignment="center"
                                android:layout_marginTop="8dp"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addCustomerButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Add Customer"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        app:icon="@drawable/ic_add_person"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/primary_blue"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Watch how to create lead"
                        android:textColor="@color/primary_blue"
                        android:drawableStart="@drawable/ic_play"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Not able to find new customers section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not able to find new customers?"
                android:textColor="@color/text_gray"
                android:textSize="18sp"
                android:layout_marginTop="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Try these tools to get customers"
                android:textColor="@color/text_gray"
                android:layout_marginTop="4dp"/>

            <!-- Tools Grid -->


                    <!-- Check Mutual Funds -->
                    <!-- Not able to find new customers section -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="3"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="4dp">

                        <!-- Check Mutual Funds -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@color/border_blue">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_mutual_funds"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="12dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Check Mutual\nFunds"
                                        android:textColor="@color/text_gray"
                                        android:textSize="14sp"/>


                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Phonebook Contacts -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="1dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@color/border_blue">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_contacts"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Phonebook\nContacts"
                                    android:textColor="@color/text_gray"
                                    android:textSize="14sp"
                                    android:layout_marginStart="12dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Check Credit Score -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="1dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@color/border_blue">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_credit_score"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Check Credit\nScore"
                                    android:textColor="@color/text_gray"
                                    android:textSize="14sp"
                                    android:layout_marginStart="12dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Check Challan -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="1dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@color/border_blue">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_challan"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Check\nChallan"
                                    android:textColor="@color/text_gray"
                                    android:textSize="14sp"
                                    android:layout_marginStart="12dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Share Your Website -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="1dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@color/border_blue">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_website"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Share Your\nWebsite"
                                    android:textColor="@color/text_gray"
                                    android:textSize="14sp"
                                    android:layout_marginStart="12dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Marketing Material -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="1dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@color/border_blue">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_marketing"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Marketing\nMaterial"
                                    android:textColor="@color/text_gray"
                                    android:textSize="14sp"
                                    android:layout_marginStart="12dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </GridLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>