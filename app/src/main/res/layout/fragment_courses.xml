<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Place your entire LinearLayout here -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F8F9FA">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Learn"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A" />

        </LinearLayout>

        <!-- Date Selection Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Date"
                android:textSize="14sp"
                android:textColor="#666666"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/selectedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="June 15, 2024"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A" />

        </LinearLayout>

        <!-- Summary Text -->
        <TextView
            android:id="@+id/summaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's calls included discussions with Olivia, Ethan, and Sophia. Overall, the sentiment was positive, with focus on project updates and future planning. AI feedback suggests focusing on active listening techniques to enhance client engagement."
            android:textSize="14sp"
            android:textColor="#4A4A4A"
            android:lineSpacingMultiplier="1.2"
            android:paddingBottom="24dp" />

        <!-- Summary & Feedback Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary &amp; Feedback"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/feedbackText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's calls with Olivia, Ethan, and Sophia were generally positive, focusing on project updates and future planning. AI feedback suggests enhancing client engagement through active listening techniques."
            android:textSize="14sp"
            android:textColor="#4A4A4A"
            android:lineSpacingMultiplier="1.2"
            android:paddingBottom="32dp" />

        <!-- Overall Sentiment Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overall Sentiment"
                android:textSize="16sp"
                android:textColor="#666666"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/sentimentValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Positive"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/sentimentChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today +10%"
                    android:textSize="12sp"
                    android:textColor="#22C55E" />

            </LinearLayout>

            <!-- Sentiment Chart Placeholder -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:gravity="bottom">

                <View
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="#E5E7EB" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="#E5E7EB" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:background="#3B82F6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Positive"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Neutral"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Negative"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <!-- Active Listening Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active Listening"
                android:textSize="16sp"
                android:textColor="#666666"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/activeListeningValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75%"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/activeListeningChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today +5%"
                android:textSize="12sp"
                android:textColor="#22C55E" />

            <!-- Active Listening Chart -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:gravity="bottom">

                <View
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="#E5E7EB" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="#E5E7EB" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:background="#3B82F6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Poor"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Average"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Good"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <!-- Client Engagement Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client Engagement"
                android:textSize="16sp"
                android:textColor="#666666"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/clientEngagementValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80%"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/clientEngagementChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today +8%"
                android:textSize="12sp"
                android:textColor="#22C55E" />

            <!-- Client Engagement Chart -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:gravity="bottom">

                <View
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="#E5E7EB" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="#E5E7EB" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:background="#3B82F6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Poor"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Average"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Good"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <!-- Data Summary Button -->
        <Button
            android:id="@+id/dataSummaryButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="@color/primary_blue"
            android:text="Data BZ Summary"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>

